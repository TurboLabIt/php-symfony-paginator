{% if (Pages ?? null) is not empty %}
    <nav class="tli-pagination" aria-label="{{ 'Pagination'|trans }}">
        <ul class="pagination justify-content-center">

            {% block paginationFirst %}
                <li class="page-item {% if Pages.first.url is empty %}disabled{% endif %} tli-pagination-first"
                    title="{% if Pages.first.url is empty %}{{ 'You\'re already on the first page'|trans }}{% else %}{{ 'First'|trans }}{% endif %}">

                    {% if Pages.first.url is empty %}
                        <span class="page-link">
                     {% else %}
                        <a class="page-link" href="{{ Pages.first.url }}" aria-label="{{ 'First'|trans }}">
                    {% endif %}

                        <span aria-hidden="true"><i class="fa-solid fa-backward-fast"></i></span>
                        <span class="sr-only">{{ 'First'|trans }}</span>

                    {% if Pages.first.url is empty %}
                        </span>
                     {% else %}
                        </a>
                    {% endif %}

                </li>
            {% endblock %}


            {% block paginationPrev %}
                <li class="page-item {% if Pages.prev.url is empty %}disabled{% endif %} tli-pagination-prev"
                    title="{% if Pages.prev.url is empty %}{{ 'You\'re already on the first page'|trans }}{% else %}{{ 'Previous'|trans }}{% endif %}">

                    {% if Pages.prev.url is empty %}
                        <span class="page-link">
                     {% else %}
                        <a class="page-link" href="{{ Pages.prev.url }}" aria-label="{{ 'Previous'|trans }}">
                    {% endif %}

                        <span aria-hidden="true"><i class="fa-solid fa-backward-step"></i></span>
                        <span class="sr-only">{{ 'Previous'|trans }}</span>

                    {% if Pages.prev.url is empty %}
                        </span>
                     {% else %}
                        </a>
                    {% endif %}

                </li>
            {% endblock %}


            {% for Page in Pages.pages %}
                {% block paginationPage %}
                    <li class="page-item {% if Page.url is empty and not Page.isDots %}active{% endif %} tli-pagination-page-num">
                        {% if Page.url is empty %}
                            <span class="page-link">{{ Page.label }}</span>
                        {% else %}
                            <a class="page-link" href="{{ Page.url }}">{{ Page.label }}</a>
                        {% endif %}
                    </li>
                {% endblock %}
            {% endfor %}


            {% block paginationNext %}
                <li class="page-item {% if Pages.next.url is empty %}disabled{% endif %} tli-pagination-next"
                    title="{% if Pages.next.url is empty %}{{ 'You\'re already on the last page'|trans }}{% else %}{{ 'Next'|trans }}{% endif %}">

                    {% if Pages.next.url is empty %}
                        <span class="page-link">
                     {% else %}
                        <a class="page-link" href="{{ Pages.next.url }}" aria-label="{{ 'Next'|trans }}">
                    {% endif %}

                        <span aria-hidden="true"><i class="fa-solid fa-forward-step"></i></span>
                        <span class="sr-only">{{ 'Next'|trans }}</span>

                    {% if Pages.next.url is empty %}
                        </span>
                     {% else %}
                        </a>
                    {% endif %}

                </li>
            {% endblock %}


            {% block paginationLast %}
                <li class="page-item {% if Pages.last.url is empty %}disabled{% endif %} tli-pagination-last"
                    title="{% if Pages.last.url is empty %}{{ 'You\'re already on the last page'|trans }}{% else %}{{ 'Last'|trans }}{% endif %}">

                    {% if Pages.last.url is empty %}
                        <span class="page-link">
                     {% else %}
                        <a class="page-link" href="{{ Pages.last.url }}" aria-label="{{ 'Last'|trans }}">
                    {% endif %}

                        <span aria-hidden="true"><i class="fa-solid fa-forward-fast"></i></span>
                        <span class="sr-only">{{ 'Last'|trans }}</span>

                    {% if Pages.last.url is empty %}
                        </span>
                     {% else %}
                        </a>
                    {% endif %}

                </li>
            {% endblock %}

        </ul>
    </nav>
{% endif %}
